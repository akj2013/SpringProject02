<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.mycompany.mapper.BoardAttachMapper">
	<!-- 등록 처리 -->
	<insert id="insert">
		insert into 
			tbl_attach (
				uuid
				, uploadpath
				, filename
				, filetype
				, bno
			)
		values (
			#{uuid}
			, #{uploadPath}
			, #{fileName}
			, #{fileType}
			, #{bno}
		)
	</insert>

	<!-- 삭제 처리 -->
	<delete id="delete">
		delete from
			tbl_attach
		where
			uuid = #{uuid}
	</delete>

	<!-- 특정 게시물의 첨부파일을 검색. -->
	<select id="findByBno" resultType="com.mycompany.domain.BoardAttachVO">
		SELECT
			*
		FROM
			tbl_attach
		WHERE
			bno = #{bno}
	</select>
</mapper>